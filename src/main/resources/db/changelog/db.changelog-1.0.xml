<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="valverde.thiago" id="create_tables">
        <createTable tableName="topic">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_pauta"/>
            </column>
            <column name="descricao" type="VARCHAR(255)"/>
        </createTable>
        <createTable tableName="secao_votacao">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_secao_votacao"/>
            </column>
            <column name="data_abertura" type="DATETIME"/>
            <column name="data_fechamento" type="DATETIME"/>
            <column name="id_pauta" type="BIGINT" >
                <constraints nullable="false" />
            </column>
        </createTable>
        <createTable tableName="vote">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="pk_voto"/>
            </column>
            <column name="data" type="DATETIME"/>
            <column name="id_participante" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="id_secao_votacao" type="BIGINT" >
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create_fks" author="valverde.thiago">
        <addForeignKeyConstraint baseColumnNames="id_pauta"
                                 baseTableName="secao_votacao"
                                 constraintName="fk_pauta_secao"
                                 referencedColumnNames="id"
                                 referencedTableName="topic"/>
        <addForeignKeyConstraint baseColumnNames="id_secao_votacao"
                                 baseTableName="vote"
                                 constraintName="fk_voto_secao"
                                 referencedColumnNames="id"
                                 referencedTableName="secao_votacao"/>
    </changeSet>

</databaseChangeLog>
